{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Emoji Lollipop chart for energy consumption in 2022 by sector.",
  "height": 500,
  "width": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/JannaKung/FIT-3179-Assignment-2/refs/heads/main/data/End_commerical_sectors.csv",
    "format": {"type": "csv"}
  },
  "params": [
    {
      "name": "Year_selection",
      "value": 2022,
      "bind": {
        "input": "range",
        "min": 2011,
        "max": 2022,
        "step": 1,
        "name": "Select Year: "
      }
    }
  ],
  "transform": [
    {
      "filter": "datum.Year == Year_selection"
    },
    {
      "lookup": "Sectors",
      "from": {
        "data": {
          "values": [
            {"name": "Agriculture", "emoji": "üåæ"},
            {"name": "Commercial", "emoji": "üè¢"},
            {"name": "Utilities", "emoji": "üèóÔ∏è"},
            {"name": "Construction", "emoji": "‚ö°"},
            {"name": "Households", "emoji": "üè†"},
            {"name": "Manufacturing", "emoji": "üè≠"},
            {"name": "Transport", "emoji": "üöö"},
            {"name": "Mining", "emoji": "‚õèÔ∏è"}
          ]
        },
        "key": "name",
        "fields": ["emoji"]
      }
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "rule",
        "strokeWidth": 2
      },
      "encoding": {
        "y": {
          "field": "emoji",
          "type": "nominal",
          "title": null,
          "axis": {
            "labelPadding": 10
          }
        },
        "x": {
          "field": "Energy Consumption (PJ)",
          "type": "quantitative",
          "title": "Energy Consumption (PJ)"
        }
      }
    },
    {
      "mark": {
        "type": "point",
        "filled": true,
        "size": 100,
        "tooltip": true
      },
      "encoding": {
        "y": {
          "field": "emoji",
          "type": "nominal",
          "title": "Sectors",
          "axis": {
            "title": "Sectors",
            "labelPadding": 10,
            "labelFontSize": 30
          }
        },
        "x": {
          "field": "Energy Consumption (PJ)",
          "type": "quantitative"
        },
        "color": {
          "condition": {
            "test": "datum.Sectors === 'Households'",
            "value": "orange"
          },
          "value": "red"
        },
        "tooltip": [
          {"field": "Sectors", "type": "nominal", "title": "Sector"},
          {"field": "Energy Consumption (PJ)", "type": "quantitative", "title": "Energy Consumption (PJ)"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "dx": 8,
        "dy": -3,
        "fontSize": 12,
        "font": "Poppins"
      },
      "encoding": {
        "text": {
          "field": "Sectors",
          "type": "nominal"
        },
        "x": {
          "field": "Energy Consumption (PJ)",
          "type": "quantitative"
        },
        "y": {
          "field": "emoji",
          "type": "nominal"
        }
      }
    }
  ]
}
