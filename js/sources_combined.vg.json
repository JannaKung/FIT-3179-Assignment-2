{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Australia's Energy Shift: Comparing Non-Renewables and Renewables",
  "config": {
    "title": {
      "font": "Poppins",
      "fontSize": 20,
      "anchor": "middle",
      "offset": 15
    },
    "axis": {
      "titleFont": "Poppins",
      "labelFont": "Poppins"
    },
    "legend": {
      "titleFont": "Poppins",
      "labelFont": "Poppins"
    }
  },
  "hconcat": [
    {
      "width": 300,
      "height": 250,
      "data": {
        "url": "https://raw.githubusercontent.com/JannaKung/FIT-3179-Assignment-2/refs/heads/main/data/Non-renewable_production.csv",
        "format": { "type": "csv" }
      },
      "mark": "bar",
      "encoding": {
        "x": {
          "field": "Non-Renewables",
          "type": "nominal",
          "axis": {
            "labelAngle": 14,
            "labelAlign": "left"
          }
        },
        "y": {
          "field": "Energy Production (PJ)",
          "type": "quantitative"
        },
        "xOffset": {
          "field": "Year",
          "type": "nominal"
        },
        "color": {
          "field": "Year",
          "type": "nominal",
          "scale": {
            "domain": ["2011", "2022"],
            "range": ["#F6EACB", "#D1E9F6"]
          }
        },
        "tooltip": [
          { "field": "Year", "title": "Year" },
          { "field": "Energy Production (PJ)", "title": "Energy Production (PJ)" },
          { "field": "Non-Renewables", "title": "Source" }
        ]
      }
    },
    {
      "width": 300,
      "height": 250,
      "data": {
        "url": "https://raw.githubusercontent.com/JannaKung/FIT-3179-Assignment-2/refs/heads/main/data/Renewable%20energy%20sources.csv",
        "format": { "type": "csv" }
      },
      "layer": [
        {
          "mark": {
            "type": "area",
            "line": true,
            "point": true,
            "size": 2
          },
          "encoding": {
            "x": { "field": "Year", "type": "ordinal" },
            "y": { "field": "Energy Production (PJ)", "type": "quantitative" },
            "color": {
              "field": "Renewable sources",
              "type": "nominal",
              "legend": { "title": "Renewable sources" },
              "scale": {
                "domain": ["Hydro energy", "Solar energy", "Wind energy"],
                "range": ["#91bfdb", "#fee08b", "#fdae61"]
              }
            },
            "opacity": {
              "condition": {
                "test": "datum['Renewable sources'] == 'Household electricity use'",
                "value": 0
              },
              "value": 1
            },
            "tooltip": [
              { "field": "Year", "title": "Year" },
              { "field": "Energy Production (PJ)", "title": "Energy Production (PJ)" },
              { "field": "Renewable sources", "title": "Source" }
            ]
          }
        },
        {
          "mark": {
            "type": "line",
            "point": true,
            "color": "#4682B4",
            "size": 2
          },
          "encoding": {
            "x": { "field": "Year", "type": "ordinal" },
            "y": { "field": "Energy Production (PJ)", "type": "quantitative" },
            "detail": { "field": "Renewable sources" },
            "color": {
              "condition": {
                "test": "datum['Renewable sources'] == 'Household electricity use'",
                "value": "#4682B4"
              },
              "value": null
            }
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "left",
            "dx": 15,
            "dy": -3,
            "fontSize": 12,
            "fontWeight": "bold"
          },
          "encoding": {
            "x": { "aggregate": "max", "field": "Year", "type": "ordinal" },
            "y": {
              "field": "Energy Production (PJ)",
              "type": "quantitative",
              "aggregate": "max"
            },
            "text": {
              "value": "Household electricity use"
            },
            "color": { "value": "#4682B4" }
          }
        }
      ]
    }
  ],
  "resolve": {
    "scale": {
      "color": "independent"
    }
  },
  "spacing": 70
}
